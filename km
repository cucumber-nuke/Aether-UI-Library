local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local character = LocalPlayer.Character

for _, player in pairs(Players:GetPlayers()) do
    if player ~= LocalPlayer and player.Character then
        local knife = player.Character:FindFirstChild("Knife")
        if knife then
            local targetPos = player.Character.HumanoidRootPart.Position
            character:MoveTo(Vector3.new(targetPos.X, targetPos.Y, targetPos.Z))
            wait(0.1)
            
            local revolver = character:FindFirstChild("Revolver")
            if revolver and revolver:FindFirstChild("Server") then
                local revolverShoot = revolver.Server:FindFirstChild("RevolverShoot")
                if revolverShoot then
                    revolverShoot:FireServer(targetPos)
                end
            end
        end
    end
end
